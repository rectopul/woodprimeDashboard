.typeName
    height 40px
    display flex
    flex 1
    background-color #fff
    border 1px solid rgba(0,0,0,.125)
    color: #BF9B7A
    font-size: 16px
    font-weight 400
    border-radius 4px
    padding 5px 10px

.modal#types
    & .modal-footer
        position relative
    & .typesContainer
        max-height 500px
        overflow-y auto
        position relative
    & .types-hover
        position absolute
        width 100%
        height 100%
        background-color rgba(0,0,0,0.5)
        display none
        justify-content center
        align-items center
        border-radius .25rem
        & > button
            margin 0 5px
            font-size: 10px
            &:not(.select-type)
                opacity .5
            &:hover
                opacity 1
    & .card-type
        &:hover
            & .types-hover
                display flex

.loaderInsertCustom
    &:not(.show)
        display: none